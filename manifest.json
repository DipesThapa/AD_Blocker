{
  "manifest_version": 3,
  "name": "AdBlock Ultra",
  "description": "Blocks intrusive ads and trackers using dynamic filter lists, heuristics, and cosmetic filtering.",
  "version": "0.1.0",
  "minimum_chrome_version": "109",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": []
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AdBlock Ultra",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/popupGuard.js",
        "content/updatePopupGuard.js",
        "content/youtubeFixes.js",
        "content/youtubeStyle.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
